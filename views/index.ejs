<html>
  <head>
    <meta charset="utf-8">
    <title>Movies API</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa&display=swap" rel="stylesheet">
    <style>
      *{
          font-family: 'Comfortaa', cursive;
        }
  </style>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
        <span class="navbar-text mb-0 h1 text-center" style="width: 100%;">MoviePedia</span>
      </div>
    </nav>
    <div class="container mt-5" style="width: 40%;">
      <form action="/" method="post">
          <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label" >Title</label>
              <input type="text" class="form-control" id="exampleFormControlInput1" name="title" placeholder="Enter Movie's Name">
          </div>
          <div class="mb-3">
              <label for="selectinput" class="mb-2">Type</label>
              <select class="form-select" id="selectinput" aria-label="Default select example" name="type">
                  <option value="movie" name="type" selected>Movie</option>
                  <option value="series" name="type">Series</option>
                  <option value="episode" name="type">Episode</option>
              </select>
          </div>
          <div class="mb-3">
              <label for="plotinput" class="mb-2">Plot</label>
              <select class="form-select" id="plotinput" aria-label="Default select example" name="plot">
                  <option value="short" selected>Short</option>
                  <option value="full" >Full</option>
              </select>
          </div>
          <input type="submit" value="Submit" class="btn btn-success">
      </form>
  </div>

  <% if(movies !== null) { %>
    <div class="container d-flex mt-5" style="width: 70%;">
        <div class="container-fluid">
            <p class="fs-2 fw-bold"><%= title %></p>
            <p class="fs-4 fst-italic"><%= year %></p>
            <p class="fs-6"><%= awards %></p>
            <p class="fs-6"><%= lang %></p>
            <p class="fs-6">Imdb Rating: <%= rating %>/10</p>
            <p class="fs-6 lh-base"><%= plot %></p>
        </div>
        <div class="container-fluid">
            <img src="<%= poster %>" alt="no image" class="img-fluid rounded mx-auto d-block img-thumbnail">
        </div>
    </div>
  <% } %>

  <% if(error !== null) { %>
      <div class="container mt-3"  style="width: 50%;">
          <p class="badge bg-danger text-wrap pt-3 pb-3 px-2 fs-4" style="width: 100%;"> <%= error %> </p>
      </div>
  <% } %>
  </body>
</html>